<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.Help.Faq">

    <ImageView
        android:id="@+id/btn_back3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_ripple"
        android:onClick="btn_back3"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="Help Center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FAQ"
        android:onClick="FAQ"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="FAQ"
        android:background="@drawable/report_border"
        android:textColor="@color/blue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CONTACT"
        android:onClick="CONTACT"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/inter_semibold"
        android:gravity="center"
        android:text="CONTACT US"
        android:background="@drawable/report_border"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/help1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toBottomOf="@+id/CONTACT">

        <!--Help1-->
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="325dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_article"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="How do I access the main menu in the Stock Minder application?"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:justificationMode="inter_word"
                android:text="@string/help_1"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="normal" />
        </androidx.cardview.widget.CardView>

        <!--Help2-->
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="325dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_article"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="What are the options available in the main menu of the Stockminder application?"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:justificationMode="inter_word"
                android:text="@string/help_2"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="normal" />
        </androidx.cardview.widget.CardView>

        <!--Help3-->
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="325dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:background="@drawable/card_article"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:gravity="left"
                android:text="How do I search for certain menus or features in the Stockminder application?"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="290dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="45dp"
                android:justificationMode="inter_word"
                android:text="@string/help_3"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="normal" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
