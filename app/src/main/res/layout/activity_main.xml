                <TextView
                    android:id="@+id/isi_2"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/isi_2"
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textSize="8dp"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/sumber_2"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="125dp"
                    android:background="@drawable/detik" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bx_calendar"
                    android:layout_marginTop="128dp"
                    android:layout_marginStart="75dp"/>

                <TextView
                    android:id="@+id/date_article2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="30 Nov 2023"
                    android:textColor="@color/black"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="128dp"/>
            </androidx.cardview.widget.CardView>

            <!-- CardView 3 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/article3"
                android:onClick="article3"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_article"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/gambar_3"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/art3" />

                <TextView
                    android:id="@+id/judul_3"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Wapres Ingin Bursa Saham Tak Lagi Ekslusif Ke Perusahaan Besar"
                    android:textColor="@color/black"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isi_3"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/isi_3"
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textSize="8dp"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/sumber_3"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="125dp"
                    android:background="@drawable/detik" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bx_calendar"
                    android:layout_marginTop="128dp"
                    android:layout_marginStart="75dp"/>

                <TextView
                    android:id="@+id/date_article3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="02 Jan 2024"
                    android:textColor="@color/black"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="128dp"/>
            </androidx.cardview.widget.CardView>

            <!-- CardView 4 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/article4"
                android:onClick="article4"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:background="@drawable/card_article"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/gambar_4"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/art4" />

                <TextView
                    android:id="@+id/judul_4"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Tokopedia Beberkan 6 Strategi UMKM isa Bersaing di Era Digital"
                    android:textColor="@color/black"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isi_4"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="30dp"
