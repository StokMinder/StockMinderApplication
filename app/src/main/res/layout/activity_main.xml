                <ImageView
                    android:id="@+id/sumber_4"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="125dp"
                    android:background="@drawable/detik" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bx_calendar"
                    android:layout_marginTop="128dp"
                    android:layout_marginStart="75dp"/>

                <TextView
                    android:id="@+id/date_article4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="27 Dec 2023"
                    android:textColor="@color/black"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="128dp"/>
            </androidx.cardview.widget.CardView>

            <!-- CardView 5 -->

            <androidx.cardview.widget.CardView
                android:id="@+id/article5"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:onClick="article5"
                android:background="@drawable/card_article"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/gambar_5"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/art5" />

                <TextView
                    android:id="@+id/judul_5"
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="8dp"
                    android:gravity="left"
                    android:text="Rencana Penghapusan Kredit Macet UMKM"
                    android:textColor="@color/black"
                    android:textSize="8dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/isi_5"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/isi_5"
                    android:justificationMode="inter_word"
                    android:textColor="@color/black"
                    android:textSize="8dp"
                    android:textStyle="normal" />


                <ImageView
                    android:id="@+id/sumber_5"
                    android:layout_width="50dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="125dp"
                    android:background="@drawable/liputan6" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/bx_calendar"
                    android:layout_marginTop="128dp"
                    android:layout_marginStart="75dp"/>

                <TextView
                    android:id="@+id/date_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8dp"
                    android:text="30 Dec 2023"
                    android:textColor="@color/black"
                    android:layout_marginStart="90dp"
                    android:layout_marginTop="128dp"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btn_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@drawable/selector_nav"
        app:itemTextColor="@drawable/selector_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <FrameLayout
        android:id="@+id/nav_host_fragment_activity_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>